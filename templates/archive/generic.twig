{% extends 'layouts/base.twig' %}
{% block content %}
    <h1>{{ archive_title }}</h1>

    <ul>
    {% for post in posts %}
        <li>
            <b><a href="{{ post.permalink }}">{{ post.title }}</a></b>
            <p>{{ post.get_content | excerpt(200) }}</p>
        </li>
    {% endfor %}
    </ul>
{% endblock %}
