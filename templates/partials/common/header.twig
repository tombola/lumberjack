<!DOCTYPE html>
<!--[if lt IE 9 ]> <html lang="en-GB" class="no-js lt-ie9"> <![endif]-->
<!--[if IE 9 ]> <html lang="en-GB" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en-GB" class="no-js"> <!--<![endif]-->
<head>
    <meta charset="{{ site.charset }}" />
    <title>{{ wp_title }}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='http://fonts.googleapis.com/css?family=Cardo:700|Josefin+Sans' rel='stylesheet' type='text/css'>

    <!-- Optional theme -->
{#     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css"> #}
    {{ 'main.css' | css_tag }}

    <!-- Favicons -->
    <link rel="shortcut icon" href="{{ assets }}img/favicon.png" />
    <link rel="apple-touch-icon" sizes="57x57" href="{{ assets }}img/favicon/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="114x114" href="{{ assets }}img/favicon/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="72x72" href="{{ assets }}img/favicon/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="144x144" href="{{ assets }}img/favicon/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="60x60" href="{{ assets }}img/favicon/apple-touch-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="120x120" href="{{ assets }}img/favicon/apple-touch-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="76x76" href="{{ assets }}img/favicon/apple-touch-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ assets }}img/favicon/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ assets }}img/favicon/apple-touch-icon-180x180.png">
    <link rel="icon" type="image/png" href="{{ assets }}img/favicon/favicon-192x192.png" sizes="192x192">
    <link rel="icon" type="image/png" href="{{ assets }}img/favicon/favicon-160x160.png" sizes="160x160">
    <link rel="icon" type="image/png" href="{{ assets }}img/favicon/favicon-96x96.png" sizes="96x96">
    <link rel="icon" type="image/png" href="{{ assets }}img/favicon/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="{{ assets }}img/favicon/favicon-32x32.png" sizes="32x32">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-TileImage" content="{{ assets }}img/favicon/mstile-144x144.png">

    <!-- Open Graph meta for facebook sharing -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{ wp_title }}" />
    <meta property="og:url" content="{{ post.get_permalink }}" />
    <meta property="og:image" content="{{ assets }}img/social/fbshare.png" />

    <!-- Twitter card meta -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="{{ twitter_handle }}" />
    <meta name="twitter:title" content="{{ wp_title }}" />
    <meta name="twitter:description" content="{{ post.get_content | excerpt(20) }}" />
    <meta name="twitter:image" content="{{ assets }}img/social/twshare.png" />
    <meta name="twitter:url" content="{{ post.get_permalink }}" />

    <!-- before load scripts and css -->
    {{ 'libs/modernizr.js' | js_tag }}
    {{ 'lumberjack.js' | js_tag }}
    {{ 'screen.min.css' | css_tag }}

    <!-- wp_head -->
    {{ wp_head }}
</head>
<body class="{{ body_class }}">

<header class="navigation" role="banner">
  <div class="navigation-wrapper">
{#     <a href="javascript:void(0)" class="logo">
      <img src="logo">
    </a> #}
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
    <nav role="navigation">
        <ul id="js-navigation-menu" class="navigation-menu show">
            {% for item in menu.get_items %}
                <li class="nav-link"><a href="{{item.get_link}}">{{item.title}}</a>
                    {% if item.get_children %}
                        <ul class="submenu">
                            {% for child in item.get_children %}
                                <li>
                                    <a href="{{child.get_link}}">{{child.title}}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </nav>
    <div class="navigation-tools">
      <div class="search-bar">
        <form role="search" method="get" id="searchform" class="searchform" action="http://tombeerframes.co.uk/">

          <input type="search" placeholder="Enter Search" value="" name="s" id="s"/>
          <button type="submit">
            <img src="{{ 'search-icon.png' | img_path }}">
          </button>
        </form>
      </div>
    </div>
  </div>
</header>


<div id="page-container">
